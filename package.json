{
  "name": "connect4-web",
  "version": "1.0.0",
  "description": "A 2-player (local and multiplayer) version of Connect 4 created with Phaser",
  "scripts": {
    "test": "jest",
    "start:dev": "webpack-dev-server --config webpack/dev.config.js --open",
    "start:local": "webpack-dev-server --config webpack/dev.config.js --host 0.0.0.0",
    "start": "node server.js",
    "build:dev": "webpack --config webpack/dev.config.js",
    "build": "webpack --config webpack/prod.config.js"
  },
  "author": "hehe",
  "license": "MIT",
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/jest": "^27.0.1",
    "clean-webpack-plugin": "^4.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.2.0",
    "phaser": "^3.55.2",
    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "big-integer": "^1.6.48",
    "express": "^4.17.1"
  }
}
